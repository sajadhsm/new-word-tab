{
  "name": "new-word-tab",
  "displayName": "New Word Tab",
  "description": "Learn a word per new tab",
  "version": "1.6.0",
  "author": {
    "name": "Sajad Hashemian",
    "email": "sajadhsm@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "npm run typecheck && vite build",
    "pack": "npm run build && esno scripts/pack.ts",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "lint": "eslint 'src/**/*.{json,ts,js,vue}'",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@iconify-json/eos-icons": "^1.2.2",
    "@iconify-json/fa-solid": "^1.2.1",
    "@iconify-json/ic": "^1.2.2",
    "@iconify-json/mdi": "^1.2.2",
    "@iconify-json/ph": "^1.2.2",
    "@types/archiver": "^6.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.2",
    "@types/webextension-polyfill": "^0.12.1",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "archiver": "^7.0.1",
    "chokidar": "^4.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.32.0",
    "esno": "^4.8.0",
    "fs-extra": "^11.2.0",
    "kolorist": "^1.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4",
    "unplugin-icons": "^0.22.0",
    "unplugin-vue-components": "^0.28.0",
    "vite": "^6.0.5",
    "vue": "^3.5.13",
    "web-ext": "^8.3.0",
    "webextension-polyfill": "^0.12.0"
  },
  "dependencies": {
    "vuedraggable": "^4.1.0"
  },
  "packageManager": "pnpm@9.15.1"
}